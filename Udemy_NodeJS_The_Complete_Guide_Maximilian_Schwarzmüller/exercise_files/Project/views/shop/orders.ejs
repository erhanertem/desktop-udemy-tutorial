        <%- include('../layout/head')%>
        <link rel="stylesheet" href="/css/orders.css">
        </head>

        <body>
          <%- include('../layout/navigation')%>
          <main>
            <% if (orders.length <= 0) { %>
            <h1>Nothing there!</h1>
            <% } else { %>
            <ul class="orders">
              <% orders.forEach(order => { %>
              <li class="orders__item">
                <h1>Order - # <%= order._id %></h1><a href='/orders/<%=order._id%>' target='_blank' rel='noopener noreferrer'>Invoice</a>
                <ul class="orders__products">
                  <% order.products.forEach(product => { %>
                  <li class="orders__products-item"><%= product.product.title %> (<%= product.quantity %>) </li>
                  <% }); %>
                </ul>
              </li>
              <% }); %>
            </ul>
            <% } %>
          </main>
          <%- include('../layout/end')%>