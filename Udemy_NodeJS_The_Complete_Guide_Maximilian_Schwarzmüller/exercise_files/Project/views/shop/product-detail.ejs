<%- include('../layout/head')%>
</head>

<body>
  <%- include('../layout/navigation')%>
  <main class='centered'>
    <h1><%=product.title%></h1>
    <hr>
    <div class='image'>
      <img src="<%= product.imageUrl %>" alt="<%= product.title %>" width="300">
    </div>
    <h2>Price: $<%= product.price %></h2>
    <p><%= product.description %></p>
    <% if(isAuthenticated) { %>
    <%- include('../layout/add-to-cart')%>
    <% } %>
  </main>
  <%- include('../layout/end')%>